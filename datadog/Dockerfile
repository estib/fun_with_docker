ADD nginx.yaml /etc/datadog-agent/conf.d/nginx/conf.yaml
ADD redisdb.yaml /etc/datadog-agent/conf.d/redisdb/conf.yaml
ADD postgres.yaml /etc/datadog-agent/conf.d/postgres/conf.yaml
ADD docker_logs.yaml /etc/datadog-agent/conf.d/docker_logs/conf.yaml
